
@{
    ViewBag.Title = "Create";
}

<h2>Create Resort</h2>
<form action="/Resort/Create" method="POST">
    <div>
        <label>Id:</label> <input type="number" name="ResortId" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="ResortName" />
    </div>
    <div>
        <label>Address:</label> <input type="text" name="address" />
    </div>
    <div>
        <label>Description:</label> <input type="text" name="description" />
    </div>
    <div>
        <label>Number Of Trails Open:</label> <input type="text" name="NumberOfTrailsOpen" />
    </div>
    <div>
        <label>Contact:</label> <input type="text" name="Contact" />
    </div>
    <div>
        <label>Wheelchair Accessible:</label> <input type="checkbox" name="WheelchairAccessible" />
    </div>
    <div>
        <label>Number Of Restaurants:</label> <input type="number" name="NumberOfRestaurants" />
    </div>
    <div>
        <input type="submit" value="Add Resort"/>
    </div>

</form>


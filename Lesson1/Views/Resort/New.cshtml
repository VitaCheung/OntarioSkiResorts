
@{
    ViewBag.Title = "Create";
}
<h1><a class="back_btn" href="/Resort/List"><< </a></h1>
<h2>Create Resort</h2>


<form action="/Resort/Create" method="POST">
    
    <div>
        <label>Name:</label> <input type="text" name="ResortName" />
    </div>
    <div>
        <label>Address:</label> <textarea name="address" class="longtext"></textarea>
    </div>
    <div>
        <label>Description:</label> <textarea name="description" class="longtext"></textarea>
    </div>
    <div>
        <label>Number Of Trails Open:</label> <input type="text" name="NumberOfTrailsOpen" />
    </div>
    <div>
        <label>Contact:</label> <input type="text" name="Contact" />
    </div>
    <div>
        <label>Wheelchair Accessible:</label> <input type="checkbox" name="WheelchairAccessible" value="true" />
    </div>
    <div>
        <label>Number Of Restaurants:</label> <input type="number" name="NumberOfRestaurants" />
    </div>
    <div>
        <input type="submit" value="Add Resort"/>
    </div>

</form>


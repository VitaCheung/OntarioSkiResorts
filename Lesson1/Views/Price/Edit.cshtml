@model Lesson1.Models.ViewModels.UpdatePrice
@{
    ViewBag.Title = "Edit";
}

<h1><a class="back_btn" href="/Price/List"><< </a></h1>
<h2>Update Price</h2>
<p>@Model.SelectedPrice.ResortName</p>




<form action="/Price/Update/@Model.SelectedPrice.PriceId" method="POST">
    <div style="display:none;">
        <label>PriceId:</label> <input type="number" name="PriceId" value="@Model.SelectedPrice.PriceId" />
    </div>
    <div style="display:none;">
        <label>ResortId:</label> <input type="number" name="ResortId" value="@Model.SelectedPrice.ResortId" />
    </div>

    <div>
        <label>DAY 1 hour:</label> <input type="number" step="0.01" name="DAY1Hour" value="@Model.SelectedPrice.DAY1Hour" />
    </div>
    <div>
        <label>DAY 2 hours:</label> <input type="number" step="0.01" name="DAY2Hours" value="@Model.SelectedPrice.DAY2Hours" />
    </div>
    <div>
        <label>DAY 3 hours:</label> <input type="number" step="0.01" name="DAY3Hours" value="@Model.SelectedPrice.DAY3Hours" />
    </div>
    <div>
        <label>DAY 4 hours:</label> <input type="number" step="0.01" name="DAY4Hours" value="@Model.SelectedPrice.DAY4Hours" />
    </div>
    <div>
        <label>NIGHT 1 hour:</label> <input type="number" step="0.01" name="NIGHT1Hour" value="@Model.SelectedPrice.NIGHT1Hour" />
    </div>
    <div>
        <label>NIGHT 2 hours:</label> <input type="number" step="0.01" name="NIGHT2Hours" value="@Model.SelectedPrice.NIGHT2Hours" />
    </div>
    <div>
        <label>NIGHT 3 hours:</label> <input type="number" step="0.01" name="NIGHT3Hours" value="@Model.SelectedPrice.NIGHT3Hours" />
    </div>
    <div>
        <label>NIGHT 4 hours:</label> <input type="number" step="0.01" name="NIGHT4Hours" value="@Model.SelectedPrice.NIGHT4Hours" />
    </div>

    <div>
        <input type="submit" value="Update Price" />
    </div>

</form>



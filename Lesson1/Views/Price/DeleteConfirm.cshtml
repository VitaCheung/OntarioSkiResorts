@model Lesson1.Models.PriceDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this price list?</h2>

<h2>PriceId: @Model.PriceId</h2>

<div class="box">
    <a class="cancel_btn" href="/Price/List">Cancel</a>
    <form action="/Price/Delete/@Model.PriceId" method="POST">
        <input type="submit" class="confirm_btn" value="Confirm Delete" />

    </form>
</div>


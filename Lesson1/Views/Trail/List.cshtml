@model IEnumerable<Lesson1.Models.TrailDto>
@{
    ViewBag.Title = "List";
}

<h1>Trail List</h1>
<a class="add_btn" href="/Trail/New">Add New Trail information</a>
<div class="pic3"></div>

<div id="container">
    @foreach (var Trail in Model)
    {<div class="ResortTrail">

        <h2>@Trail.ResortName</h2>
        <p>Resort Id: @Trail.ResortId </p>

        <div>Beginner Trails: @Trail.BeginnerTrails</div>
        <div>Intermediate Trails: @Trail.IntermediateTrails</div>
        <div>Advanced Trails: @Trail.AdvancedTrails</div>
        <div>Terrain Parks: @Trail.TerrainPark</div>
        <div>Tubing Parks: @Trail.TubingPark</div>

        <a class="details_btn" href="/Trail/Details/@Trail.TrailId"> Details </a>
     </div>
    }

</div>

